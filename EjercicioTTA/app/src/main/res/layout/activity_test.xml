<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:id="@+id/test_layout"
    tools:context="es.tta.ejerciciotta.TestActivity">

    <TextView
        android:id="@+id/test_wording"
        android:text="Pregunta test" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RadioGroup
        android:id="@+id/test_choices"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    </RadioGroup>

    <Button
        android:id="@+id/button_send_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_send"
        android:visibility="invisible"
        android:onClick="send"/>

    <Button
        android:id="@+id/button_view_advise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_advise"
        android:visibility="invisible"
        android:onClick="advise"/>
</LinearLayout>
